{
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "compilerOptions": {
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "allowJs": true,
    "target": "ESNext",
    "outDir": "./build",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["ESNext"],
    "rootDir": ".",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "/*": ["./*"]
    }
  }
}
